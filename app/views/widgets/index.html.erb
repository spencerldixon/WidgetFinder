<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="jumbotron">
	<div class="container">
		<h1>WidgetFinder</h1>
		<p>Find and buy widgets near you!</p>
		<p>This application was built using Ruby on Rails, PostgreSQL, Geocoder, Stripe, and Google-Maps-for-Rails</p>
		<%= form_tag widgets_path, method: :get do %>
			<div class="col-lg-10">
				<%= text_field_tag :search, params[:search], placeholder: "Enter a place name to find widgets near you...", class: "form-control" %>
			</div>
			<div class="col-lg-2">
				<%= submit_tag "Search Widgets!", name: nil, class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<% if @widgets.empty? %>
			<h3>Sorry, we couldn't find any widgets near you :(</h3>
		<% else %>
			<div style="padding-bottom: 50px;">
				<div id="map" style='width: 100%; height: 400px;'></div>
			</div>
			<%= render @widgets %>
		<% end %>
	</div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers(<%=raw @hash.to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	  handler.getMap().setZoom(15)
	});
</script>