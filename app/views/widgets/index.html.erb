<div class="jumbotron">
	<div class="container">
		<h1>WidgetFinder</h1>
		<p>Find and buy widgets near you!</p>
		<p>This application was built using Ruby on Rails, PostgreSQL, Geocoder, Stripe, and Google-Maps-for-Rails</p>
		<%= form_tag widgets_path, method: :get do %>
			<div class="col-lg-10">
				<%= text_field_tag :search, params[:search], placeholder: "Enter a place name to find widgets near you...", class: "form-control" %>
			</div>
			<div class="col-lg-2">
				<%= submit_tag "Search Widgets!", name: nil, class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
	</div>
</div>

<%= render @widgets %>
